<div class="modal-body container px-4">



    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title fw-bold" id="addDiscountModalLabel"><span data-lang="update_discount">Update Discount</span></h5>
        </div>
        <div class="modal-body">
            <form id="discountForm">

                <!-- Discount Code -->
                {{!-- <h6 class="fw-bold border-bottom pb-2">Basic Information</h6> --}}
                <div class="mb-3">
                    <label for="discountCode" class="form-label"><span data-lang="discount_code">Discount Code</span></label>
                    <input type="text" class="form-control" id="discountCode" required>
                </div>

                <!-- Applies To -->
                <h6 class="fw-bold border-bottom pb-2 mt-3"><span data-lang="applies_to">Applies To</span></h6>
                <div class="mb-3">
                    <label for="appliesTo" class="form-label"><span data-lang="select_application">Select Application</span></label>
                    <div class="d-flex">
                        <select class="form-select" id="appliesTo" required>
                            {{#each appliesTo}}
                            <option value="{{this}}">{{formatDiscountField this "applies_to"}}</option>
                            {{/each}}
                        </select>
                        <button type="button" id="selectTargetBtn" class="btn btn-primary ms-2 d-none">
                            {{!-- <i class="bi bi-search"></i> --}}
