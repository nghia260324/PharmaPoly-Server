                    <label for="discountType" class="form-label"><span data-lang="discount_type">Discount Type</span></label>
                    <select class="form-select" id="discountType" required>
                        {{#each discountTypes}}
                        <option value="{{this}}">{{formatDiscountField this "type"}}</option>
                        {{/each}}
                    </select>
                </div>

                <div class="mb-3 row">
                    <div class="col-md-6">
                        <label for="discountValue" class="form-label"><span data-lang="discount_value">Discount Value</span></label>
                        <input type="number" class="form-control" id="discountValue" required>
                    </div>
                    <div class="col-md-6">
                        <label for="minOrderValue" class="form-label"><span data-lang="minimum_order_value">Minimum Order Value</span></label>
                        <input type="number" class="form-control" id="minOrderValue">
                    </div>
                </div>

                <div class="mb-3 d-none" id="maxDiscountContainer">
                    <label for="maxDiscount" class="form-label"><span data-lang="maximum_discount">Maximum Discount</span></label>
