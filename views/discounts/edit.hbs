                <!-- Validity Period -->
                <h6 class="fw-bold border-bottom pb-2 mt-3"><span data-lang="validity_period">Validity Periodt</span></h6>
                <div class="row mb-3">
                    <div class="col">
                        <label for="startDate" class="form-label"><span data-lang="start_date">Start Date</span></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-calendar"></i></span>
                            <input type="date" class="form-control" id="startDate" required>
                        </div>
                    </div>
                    <div class="col">
                        <label for="endDate" class="form-label"><span data-lang="end_date">End Date</span></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-calendar"></i></span>
                            <input type="date" class="form-control" id="endDate" required>
                        </div>
                    </div>
                </div>

                <!-- Usage Limit -->
                <h6 class="fw-bold border-bottom pb-2 mt-3"><span data-lang="usage_stackability">Usage & Stackability</span></h6>
                <div class="mb-3">
                    <label class="form-label"><span data-lang="usage_limit">Usage Limit</span></label>
                    <div class="d-flex align-items-center flex-nowrap">
                        <input class="form-check-input me-2" type="checkbox" id="hasUsageLimit">
                        <label class="form-check-label me-2 w-auto" for="hasUsageLimit"><span data-lang="set_limit">Set Limit</span></label>
                        <input type="number" class="form-control flex-grow-1 d-none" id="usageLimit"
                           data-lang-placeholder="enter_limit" placeholder="Enter limit">
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label"><span data-lang="stackable">Stackable</span></label>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="stackable">
                        <label class="form-check-label" for="stackable"><span data-lang="can_be_used_with_other_codes">Can be used with other codes</span></label>
                    </div>
                </div>

                <!-- Discount Conditions -->
                <h6 class="fw-bold border-bottom pb-2 mt-3"><span data-lang="discount_conditions">Discount Conditions</span></h6>
