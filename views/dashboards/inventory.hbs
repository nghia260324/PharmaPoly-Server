<script>
    document.addEventListener('DOMContentLoaded', function () {
        const toggleBtn = document.getElementById("toggleFilter");
        const filterCard = document.getElementById("filterCard");

        toggleBtn.addEventListener("click", function () {
            filterCard.style.display =
                filterCard.style.display === "none" ? "block" : "none";
        });
        const timeSelect = document.getElementById('timePeriod');
        const customFields = document.querySelectorAll('.custom-date-field');

        function toggleCustomDates() {
            const isCustom = timeSelect.value === 'custom';
            customFields.forEach(el => {
                el.style.display = isCustom ? 'block' : 'none';
            });
        }

        // Initial check
        toggleCustomDates();

        // Update on change
        timeSelect.addEventListener('change', toggleCustomDates);
    });
</script>
<script>
    function formatVND(number) {
        if (!number) return "";
        return Number(number).toLocaleString('vi-VN') + ' VND';
    }

    const minInput = document.getElementById('minPriceInput');
    const maxInput = document.getElementById('maxPriceInput');
    const formattedMin = document.getElementById('formattedMinPrice');
    const formattedMax = document.getElementById('formattedMaxPrice');

    function updateFormattedPrice(input, label) {
        const value = input.value;
        label.textContent = formatVND(value);
    }

    // Khởi tạo khi có sẵn value (ví dụ khi reload)
    updateFormattedPrice(minInput, formattedMin);
    updateFormattedPrice(maxInput, formattedMax);

    // Lắng nghe sự kiện người dùng nhập
    minInput.addEventListener('input', () => updateFormattedPrice(minInput, formattedMin));
    maxInput.addEventListener('input', () => updateFormattedPrice(maxInput, formattedMax));
</script>
<script>
    document.addEventListener("DOMContentLoaded", () => {
        const form = document.getElementById("filterForm");
        const minPriceInput = document.getElementById("minPriceInput");
        const maxPriceInput = document.getElementById("maxPriceInput");
        const startDateInput = document.querySelector('input[name="startDate"]');
        const endDateInput = document.querySelector('input[name="endDate"]');

        const timePeriodSelect = document.getElementById('timePeriod');
        const expiryDateField = document.getElementById('expiryDateField');

        // Kiểm tra giá trị chọn và hiển thị ô nhập ngày hết hạn nếu cần
        timePeriodSelect.addEventListener('change', function () {
            if (timePeriodSelect.value === 'expiring_soon') {
                expiryDateField.style.display = 'block';
            } else {
                expiryDateField.style.display = 'none';
            }
        });

        // Nếu đã có giá trị "expiring_soon" từ trước, hiển thị ô nhập ngày hết hạn
        if (timePeriodSelect.value === 'expiring_soon') {
            expiryDateField.style.display = 'block';
        }

        form.addEventListener("submit", function (e) {
            const minPrice = minPriceInput.value.trim();
            const maxPrice = maxPriceInput.value.trim();
            const startDate = startDateInput?.value;
            const endDate = endDateInput?.value;


            if (minPrice && maxPrice && Number(minPrice) > Number(maxPrice)) {
                e.preventDefault();
                showToast("Vui lòng nhập giá tối đa lớn hơn hoặc bằng giá tối thiểu.", "bg-danger");
                return;
            }
            if (startDate && endDate && new Date(startDate) > new Date(endDate)) {
                e.preventDefault();
                showToast("Vui lòng chọn ngày kết thúc lớn hơn ngày bắt đầu.", "bg-danger");
                return;
            }
        });
        function showToast(message, bgClass = "bg-success") {
            const toastElement = document.getElementById("toastMessage");
            const toastBody = document.getElementById("toastBody");

            toastBody.textContent = message;
            toastElement.classList.remove("bg-success", "bg-danger");
            toastElement.classList.add(bgClass);

            const toast = new bootstrap.Toast(toastElement);
            toast.show();
        }
    });

</script>