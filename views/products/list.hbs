                                    <option value="" selected disabled><span data-lang="select_category">Select
                                            Category</span></option>
                                    {{#each categories}}
                                    <option value="{{this._id}}">{{this.name}}</option>
                                    {{/each}}
                                </select>
                            </div>

                            <!-- Brand -->
                            <div class="mb-3">
                                <label for="productBrand" class="form-label"><span
